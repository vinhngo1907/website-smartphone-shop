block popUp 
    .popup.hide__popup
        .popup__content
            .popup__close
                svg
                    use(xlink:href='/images/sprite.svg#icon-cross')
            .popup__left
                .popup-img__container
                    img.popup__img(src='/images/demo/popup.jpg', alt='popup')
            .popup__right
                .right__content
                    h1
                        | Get Discount 
                        span 30%
                        |  Off
                    p Sign up to our newsletter and save 30% for you next purchase. No spam, we promise!
                    form(action='/contact',method='POST',enctype="multipart/form-data")
                        input.popup__form(type='email', placeholder='Enter your email...')
