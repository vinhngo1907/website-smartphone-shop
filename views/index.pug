block latest 
    .container#container
        section.section.latest__products#latest
            .title__container
                .section__title.active(data-id='Latest Products')
                    span.dot
                    h1.primary__title Latest Products
            .container(data-aos='fade-up', data-aos-duration='1200')
                #glide_2.glide
                    .glide__track(data-glide-el='track')
                        ul.glide__slides.latest-center
                            each item in products
                                li.glide__slide
                                    .product
                                        .product__header
                                            img(src=`${item.url}` alt="product")
                                        .product__footer
                                            h3 #{item.proName}
                                            .rating_latest
                                                svg
                                                    use(xlink:href='./images/sprite.svg#icon-star-full')
                                                svg
                                                    use(xlink:href='./images/sprite.svg#icon-star-full')
                                                svg
                                                    use(xlink:href='./images/sprite.svg#icon-star-full')
                                                svg
                                                    use(xlink:href='./images/sprite.svg#icon-star-full')
                                                svg
                                                    use(xlink:href='./images/sprite.svg#icon-star-empty')
                                            .product__price
                                                - var sale_off = (item.price - (item.price*item.sale_off)/100)/22765.00
                                                if item.sale_off !== 0
                                                    h4 #{sale_off.toLocaleString('en-US',{style:'currency', currency:'USD'})}
                                                    
                                                else
                                                    h4 #{(item.price/22765.00).toLocaleString('en-US',{style:'currency', currency:'USD'})}
                                                a#add_btn.product__btn(onclick='addItem("'+ item._id+'","'+item.inventNumb+'")', role='button') Add To Cart
                                            //- a(href=`/api/cart/add/${item._id}`)
                                                button#add_btn.product__btn(type='submit') Add To Cart
                    .glide__arrows(data-glide-el="controls")
                        button.glide__arrow.glide__arrow--left(data-glide-dir='<')
                            svg
                                use(xlink:href='/images/sprite.svg#icon-arrow-left2')
                        button.glide__arrow.glide__arrow--right(data-glide-dir='>')
                            svg
                                use(xlink:href='/images/sprite.svg#icon-arrow-right2')
